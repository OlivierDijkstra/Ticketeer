{
  "name": "ticketgate-monorepo",
  "private": true,
  "scripts": {
    "postinstall": "yarn workspace api run postinstall",
    "clean": "turbo clean",
    "dev": "turbo dev serve --parallel",
    "serve": "turbo serve",
    "test": "turbo test",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build": "turbo build"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.4",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}