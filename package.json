{
  "name": "ticketgate-monorepo",
  "private": true,
  "scripts": {
    "postinstall": "cd apps/api && composer install",
    "dev": "turbo dev serve --parallel",
    "serve": "turbo serve",
    "test": "turbo test",
    "lint": "turbo lint",
    "build": "turbo build",
    "start": "turbo start",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.4",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}